<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageVieww"
        android:layout_width="352dp"
        android:layout_height="170dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/logo1"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/linearbuttons"
        android:layout_below="@+id/imageVieww"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60mm"
        >

        <Button
            android:id="@+id/button_maps"
            android:layout_width="155dp"
            android:layout_height="75dp"
            android:onClick="situacoes_mapa"
            android:text="@string/button_maps"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            app:backgroundTint="#5288D9"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_gps" />

        <Button
            android:id="@+id/button_reportar"
            android:layout_width="155dp"
            android:layout_height="75dp"
            android:text="@string/button_report"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:backgroundTint="#5288D9"
            app:cornerRadius="20dp"
            app:icon="@drawable/ic_add_location"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25sp"/>

    </LinearLayout>


    <Button
        android:id="@+id/button_logout"
        android:layout_width="155dp"
        android:layout_height="75dp"
        android:text="Logout"
        android:onClick="logout"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:backgroundTint="#5288D9"
        app:cornerRadius="20dp"
        app:icon="@drawable/ic_logout"
        android:layout_below="@+id/linearbuttons"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        />

</RelativeLayout>